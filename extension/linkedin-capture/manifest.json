{
  "manifest_version": 2,
  "name": "Allen Portfolio â€“ LinkedIn Capture",
  "version": "1.0.0",
  "description": "Capture LinkedIn profiles into HubSpot contacts with auto-classification, tagging, notes, and tasks.",
  "permissions": [
    "activeTab",
    "storage",
    "*://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/in/*"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "48": "icons/icon-48.png"
  }
}
